<!-- Modal -->
<div class="modal fade" id="gallery-<%= gallery.id %>" tabindex="-1" role="dialog" aria-labelledby="gallery-<%= gallery.id %>-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="gallery-<%= gallery.id %>-label"><%= gallery.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <!-- Carousel -->
        <div id="carouselIndicators-<%= gallery.id %>" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% gallery.images.each.with_index do |image, i| %>
              <li data-target="#carouselIndicators-<%= gallery.id %>" data-slide-to=<%= i %> class="active"></li>
            <% end %>
          </ol>
          <div class="carousel-inner">
            <% gallery.images.each.with_index do |image, i| %>
              <div class="carousel-item <%= 'active' if i == 0 %>">
                <%= image_tag image.url, alt: 'gallery-image-title', class: "d-block w-100" %>
                <div class="carousel-inner-footer">
                  <p><%= image.title %></p>
                </div>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselIndicators-<%= gallery.id %>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselIndicators-<%= gallery.id %>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
