<!DOCTYPE html>
<html>
  <head>
    <title>Curtainly</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Hind+Siliguri|Nanum+Gothic|Source+Serif+Pro" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class=<%= "non-homepage-section" if non_homepage_section? %>>
    <div class="flash">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <div>
      <% flash.each do |key, value| %>
        <div>
          <a href="#" data-dismiss="alert">Ã—</a>
            <%= value %>
        </div>
      <% end %>
    </div>

    <div class="container main-content">
      <header>
        <div class="row">
          <div class="col-lg-9 offset-lg-3">
            <div class="header-logo">
              <%= link_to root_path do %>
                <h1 class="header-logo-text">Curtainly</h1>
              <% end %>
            </div>
            <h2 class="header-subheader-text subheader"><%= Subheader.last&.homepage %></h2>
          </div>
        </div>
        <div class="row d-lg-none">
          <div class="col-sm">
            <div class="menu-icons" onclick="showNav()">
              <i id="menu-icon" class="fa fa-bars menu-icon navbar-icon"></i>
              <i id="exit-menu-icon" class="fa fa-times exit-menu-icon navbar-icon"></i>
            </div>
          </div>
        </div>
      </header>

      <div class="row">
        <div class="col-lg-3 left-col">
          <%= render "home/navigation" %>
          <% unless current_page_testimonials? %>
            <%= render "home/testimonials" %>
          <% end %>
        </div>
        <div class="col-lg-9 right-col">
          <main>
            <%= yield %>
          </main>
        </div>
      </div>
    </div>

    <!-- <footer>
      <div class="container footer-container">
        <div class="footer-row row">
          <div class="col-4 social-links">
            <a href="#" id="instagram" class="fa fa-instagram social-icon"></a>
            <a href="#" id="facebook" class="fa fa-facebook-official social-icon"></a>
          </div>
          <div class="col-4">
            <p id="telephone">0777897987</p>
          </div>
          <div class="col-4 ">
            <p id="design-by">Design by Ethan</p>
          </div>
        </div>
      </div>
    </footer> -->

    <div class="modals-container">
      <%= render "home/contact_form_modal" %>
    </div>
  </body>
</html>
